<header class="text-center p-4 pt-8 pb-8 bg-green-600">
  <%# Sign in / Sign Out %>
  <div id="user-login" class="absolute top-4 right-4">
    <% if user_signed_in? %>
      <%= button_to "Sign out", destroy_user_session_path, method: :delete,
          class: "text-white p-1 px-2 rounded border-white border-2 hover:bg-green-700" %> 
    <% else %>
      <%= button_to "Sign in", new_user_session_path, method: :get,
          class: "text-white p-1 px-2 rounded border-white border-2 hover:bg-green-700" %> 
    <% end %>
  </div>

  <h1 class="text-5xl font-bold text-white pb-4">Campground</h1>
  <%# TODO: Drop shadow on hover? %>
  <nav class="text-white">
    <%= link_to "Home", "/", class: "hover:text-green-200 px-1" %>
    <%= link_to "Sites", "/sites", class: "hover:text-green-200 px-1" %>
    <%= link_to "Rules and Policies", "/rules", class: "hover:text-green-200 px-1" %>
    <%= link_to "About", "/contact", class: "hover:text-green-200 px-1" %>
    <% if current_user && current_user.is_admin? %>
      <%= link_to "Admin", "/admin", class: "hover:text-green-200 px-1" %>
    <% end %>
  </nav>
</header>