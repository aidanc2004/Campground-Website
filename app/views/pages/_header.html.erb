<header class="text-center p-4 bg-green-600">
  <%# Sign in / Sign Out %>
  <div id="user-login" class="absolute top-4 right-4">
    <% if user_signed_in? %>
      <%= button_to "Sign out", destroy_user_session_path, method: :delete,
          class: "text-white p-1 px-2 rounded border-white border-2 hover:bg-green-700" %> 
    <% else %>
      <%= button_to "Sign in", new_user_session_path, method: :get,
          class: "text-white p-1 px-2 rounded border-white border-2 hover:bg-green-700" %> 
    <% end %>
  </div>

  <h1 class="text-4xl font-bold text-white pb-4">Campground</h1>
  <nav class="text-white">
    <%= link_to "Home", "/" %>
    <%= link_to "Sites", "/sites" %>
    <%= link_to "Rules and Policies", "/rules" %>
    <%= link_to "Contact", "/contact" %>
    <% if current_user && current_user.is_admin? %>
      <%= link_to "Admin", "/admin" %>
    <% end %>
  </nav>
</header>